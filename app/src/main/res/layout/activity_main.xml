<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/hasilsebelumnya"
        android:layout_width="match_parent"
        android:layout_height="199dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-1dp"
        android:background="@color/dark"
        android:gravity="bottom"
        android:maxLines="1"
        android:padding="10dp"
        android:paddingTop="30dp"
        android:text=""
        android:textAlignment="viewEnd"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="15sp"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/menuhitung"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:layout_below="@+id/hasilsebelumnya"
        android:layout_marginTop="1dp"
        android:gravity="bottom"
        android:hint="0"
        android:maxLines="1"
        android:padding="10dp"
        android:text=""
        android:textAlignment="viewEnd"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="50sp"
        tools:ignore="RtlCompat" />

    <androidx.cardview.widget.CardView
          app:cardBackgroundColor="@color/dark"
          app:cardCornerRadius="4dp"
          app:cardElevation="2dp"

          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_below="@+id/menuhitung">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="7"
              android:background="@color/dark"
              android:orientation="vertical">

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="86dp"
                  android:orientation="vertical"
                  android:weightSum="7">

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="horizontal"
                      android:weightSum="4">

                      <Button
                          android:id="@+id/ac"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:layout_margin="3dp"
                          android:layout_weight="1"
                          android:backgroundTint="@color/darkgreen"
                          android:padding="6dp"
                          android:text="AC"
                          android:textSize="15sp"
                          tools:targetApi="lollipop" />

                      <Button
                          android:id="@+id/hapus"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:layout_margin="3dp"
                          android:layout_weight="1"
                          android:backgroundTint="@color/darkgreen"
                          android:padding="6dp"
                          android:text="@string/hapus"
                          android:textColor="@color/white"
                          android:textSize="15sp" />

                      <Button
                          android:id="@+id/persen"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:layout_margin="3dp"
                          android:layout_weight="1"
                          android:backgroundTint="@color/darkgreen"
                          android:padding="6dp"
                          android:text="%"
                          android:textColor="@color/white"
                          android:textSize="15sp" />

                      <Button
                          android:id="@+id/bagi"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:layout_margin="3dp"
                          android:layout_weight="1"
                          android:backgroundTint="@color/darkgreen"
                          android:padding="6dp"
                          android:text=":"
                          android:textColor="@color/white"
                          android:textSize="15sp" />

                  </LinearLayout>

              </LinearLayout>

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="90dp"
                  android:orientation="vertical"
                  android:weightSum="7">

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="horizontal"
                      android:weightSum="4">

                      <Button
                          android:id="@+id/tujuh"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:layout_margin="3dp"
                          android:layout_weight="1"
                          android:backgroundTint="@color/darkgreen"
                          android:padding="6dp"
                          android:text="7"
                          android:textColor="@color/white"
                          android:textSize="15sp" />

                      <Button
                          android:id="@+id/delapan"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:layout_margin="3dp"
                          android:layout_weight="1"
                          android:backgroundTint="@color/darkgreen"
                          android:padding="6dp"
                          android:text="8"
                          android:textAllCaps="false"
                          android:textColor="@color/white"
                          android:textSize="15sp" />

                      <Button
                          android:id="@+id/sembilan"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:layout_margin="3dp"
                          android:layout_weight="1"
                          android:backgroundTint="@color/darkgreen"
                          android:padding="6dp"
                          android:text="9"
                          android:textAllCaps="false"
                          android:textColor="@color/white"
                          android:textSize="15sp" />

                      <Button
                          android:id="@+id/kali"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:layout_margin="3dp"
                          android:layout_weight="1"
                          android:backgroundTint="@color/darkgreen"
                          android:padding="6dp"
                          android:text="X"
                          android:textAllCaps="false"
                          android:textColor="@color/white"
                          android:textSize="15sp" />

                  </LinearLayout>

              </LinearLayout>

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="90dp"
                  android:orientation="vertical"
                  android:weightSum="7">

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="horizontal"
                      android:weightSum="4">

                      <Button
                          android:id="@+id/empat"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:layout_margin="3dp"
                          android:layout_weight="1"
                          android:backgroundTint="@color/darkgreen"
                          android:padding="6dp"
                          android:text="4"
                          android:textColor="@color/white"
                          android:textSize="15sp" />

                      <Button
                          android:id="@+id/lima"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:layout_margin="3dp"
                          android:layout_weight="1"
                          android:backgroundTint="@color/darkgreen"
                          android:padding="6dp"
                          android:text="5"
                          android:textAllCaps="false"
                          android:textColor="@color/white"
                          android:textSize="15sp" />

                      <Button
                          android:id="@+id/enam"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:layout_margin="3dp"
                          android:layout_weight="1"
                          android:backgroundTint="@color/darkgreen"
                          android:padding="6dp"
                          android:text="6"
                          android:textAllCaps="false"
                          android:textColor="@color/white"
                          android:textSize="15sp" />

                      <Button
                          android:id="@+id/kurang"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:layout_margin="3dp"
                          android:layout_weight="1"
                          android:backgroundTint="@color/darkgreen"
                          android:padding="6dp"
                          android:text="-"
                          android:textAllCaps="false"
                          android:textColor="@color/white"
                          android:textSize="15sp" />

                  </LinearLayout>

              </LinearLayout>
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="90dp"
                  android:orientation="vertical"
                  android:weightSum="7">

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="horizontal"
                      android:weightSum="4">

                      <Button
                          android:id="@+id/satu"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:layout_margin="3dp"
                          android:layout_weight="1"
                          android:backgroundTint="@color/darkgreen"
                          android:padding="6dp"
                          android:text="1"
                          android:textColor="@color/white"
                          android:textSize="15sp" />

                      <Button
                          android:id="@+id/dua"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:layout_margin="3dp"
                          android:layout_weight="1"
                          android:backgroundTint="@color/darkgreen"
                          android:padding="6dp"
                          android:text="2"
                          android:textAllCaps="false"
                          android:textColor="@color/white"
                          android:textSize="15sp" />

                      <Button
                          android:id="@+id/tiga"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:layout_margin="3dp"
                          android:layout_weight="1"
                          android:backgroundTint="@color/darkgreen"
                          android:padding="6dp"
                          android:text="3"
                          android:textAllCaps="false"
                          android:textColor="@color/white"
                          android:textSize="15sp" />

                      <Button
                          android:id="@+id/tambah"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:layout_margin="3dp"
                          android:layout_weight="1"
                          android:backgroundTint="@color/darkgreen"
                          android:padding="6dp"
                          android:text="+"
                          android:textAllCaps="false"
                          android:textColor="@color/white"
                          android:textSize="15sp" />

                  </LinearLayout>

              </LinearLayout>
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="90dp"
                  android:orientation="vertical"
                  android:weightSum="7">

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="horizontal"
                      android:weightSum="3">

                      <Button
                          android:id="@+id/kosong"
                          android:layout_width="125dp"
                          android:layout_height="match_parent"
                          android:layout_margin="3dp"
                          android:layout_weight="1"
                          android:backgroundTint="@color/darkgreen"
                          android:padding="6dp"
                          android:text="0"
                          android:textAllCaps="false"
                          android:textColor="@color/white"
                          android:textSize="15sp" />

                      <Button
                          android:id="@+id/titik"
                          android:layout_width="20dp"
                          android:layout_height="match_parent"
                          android:layout_margin="3dp"
                          android:layout_weight="1"
                          android:backgroundTint="@color/darkgreen"
                          android:padding="6dp"
                          android:text="."
                          android:textAllCaps="false"
                          android:textColor="@color/white"
                          android:textSize="15sp" />

                      <Button
                          android:id="@+id/samadengan"
                          android:layout_width="20dp"
                          android:layout_height="match_parent"
                          android:layout_margin="3dp"
                          android:layout_weight="1"
                          android:backgroundTint="@color/darkgreen"
                          android:padding="6dp"
                          android:text="="
                          android:textAllCaps="false"
                          android:textColor="@color/white"
                          android:textSize="15sp" />

                  </LinearLayout>

              </LinearLayout>


          </LinearLayout>


      </androidx.cardview.widget.CardView>

</RelativeLayout>